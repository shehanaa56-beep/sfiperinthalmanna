rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read donors for public access
    // Allow write only for authenticated admin user
    match /donors/{document} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'sfiperinthalmanna@gmail.com';
    }
  }
}
